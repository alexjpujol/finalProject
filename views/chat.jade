extends ./layout.jade

block content
    
    h1 #{title}
    
    .row#videosection
        div#user1(class="four columns")
            h5 Barbarian #1
            video#localVideo(autoplay)
        div#controls(class="four columns")
            button#startButton Start
            button#callButton Call
            button#hangupButton Stop
        div#user2(class="four columns")
            h5 Barbarian #2
            video#remoteVideo(autoplay)
    .row
        div#chatmessages(class="twelve columns")
            ul(id="messages")
    .row
        div#entertext(class="twelve columns")
            form(action="")
                input(id="m" autocomplete="off")
                button#send Send
    
    
    script(src="https://cdn.socket.io/socket.io-1.2.0.js")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js")
    script(src="javascripts/adapter.js")
    script(src="javascripts/socket.js")
    script(src="javascripts/webRTC.js")
    script(src="javascripts/adapter.js")
    