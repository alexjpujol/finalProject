extends ./layout.jade

block content

    script(src="https://cdn.socket.io/socket.io-1.2.0.js")
    script(src="https://simplewebrtc.com/latest-v2.js")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js")
    script(src="javascripts/client.js")
    
    .jumbotron
        a(href="/")
            h1#chattitle #{title}
    .container-fluid
        .row#videosection
            #user1(class="col-sm-6")
                script. 
                    document.write('<h5>' + name + '</h5>')
                video#localVideo
            #user2(class="col-sm-6")
                h5 Your Friend
                #remotesVideos
        .row
            #chatmessages(class="col-md-8")
                ul(id="messages")
            #activeusers(class="col-md-8")
                ul(id="userlist")
                #popup(class="visible")
                    #buttons
                        button.language(class="btn btn-default") German
                        button.language(class="btn btn-default") Spanish
                        button.language(class="btn btn-default") Catalan
                        button.language(class="btn btn-default") French
                        button.language(class="btn btn-default") Chinese
                        button.language(class="btn btn-default") Japanese
        .row#chatinput
            .col-md-12
                form#chatform(action="")
                    input(id="m" autocomplete="off")      
                    button#send(class="btn btn-default") Send
                button#translate(class="btn btn-default") Translate
    